BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            text: '0'
#            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            text: '0'
#            font_size: 48
            size_hint_x: None
            width: self.texture_size[0] + 20    # dynamic width
            color: (1, 0.4, 0.7, 1)    # Pink RGBA
    Label:
        text: 'Enter a number and press "Square"'